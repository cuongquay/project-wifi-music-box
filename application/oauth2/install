cd /var/www/go/oauth2_proxy/
sudo cp -Rf /var/www/go/etc/sysconfig/oauth2_proxy /etc/sysconfig/
sudo cp -Rf /var/www/go/oauth2-proxy /etc/init.d/
sudo cp -Rf /var/www/go/go-simplejson/* /var/www/go/src/github.com/bitly/go-simplejson/
sudo rm -f /var/www/go/etc/sysconfig/oauth2_proxy
echo "Building the go application..."
sudo yum install golang -y
sudo GOPATH=/var/www/go go build -a
sudo chkconfig --add oauth2-proxy
sudo chkconfig oauth2-proxy on
sudo service oauth2-proxy restart
sudo service oauth2-proxy status
